.row-fluid#value_prop
	.span12
		%h1=t 'pages.join.title'

.row-fluid#images
	.span6#certified
		.visible-phone= image_tag 'cvs.jpg', alt: 'cvs'
		#partners
			%h2=t 'pages.join.partners'
			%p=t 'pages.join.partners_description_html'
			.partner
				= image_tag 'guillaume.jpg', alt: 'G.Masuit'
				%h5 G.Masuit
			.partner
				= image_tag 'delphine.jpg',  alt: 'D.Pau'
				%h5 D.Pau
			.partner.last
				= image_tag 'tristan.jpg',	 alt: 'T.Rousselle'
				%h5 T.Rousselle
			.partner.hidden-phone
				= image_tag 'arrow.jpg',		 alt: 'arrow'
	.span6.hidden-phone#cvs
		= image_tag 'cvs.jpg', alt: 'cvs'

.row-fluid#cta
	.span12
		.cta-text=t 'pages.join.cta'
		%a.btn.btn-large.btn-primary.hidden-phone{href: '#'}=t 'pages.join.cta_button'
		%a.btn.btn-primary.visible-phone{href: '#'}=t 'pages.join.cta_button'

%footer
	.container
		.row-fluid
			.span4
				.hidden-phone
					%h3=t 'pages.join.follow'
				.social-links
					%a{href: 'http://twitter.com/joblr_co', target: 'blank'}
						.icon-twitter
					%a{href: 'http://linkedin.com/company/joblr', target: 'blank'}
						.icon-linkedin
					%a{href: 'http://fb.me/joblr.co', target: 'blank'}
						.icon-facebook
			.span8#about-us.hidden-phone
				%h3=t 'pages.join.about_us'
				%p=t 'pages.join.about_us_description_html'

= mixpanel_call('track', 'Viewed teaser page', "{'Teaser version': 'templates'}")