!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= title
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}
    = stylesheet_link_tag    (request.subdomain.match(/^join|staging$/) ? 'join' : 'signup'), media: 'all'
    = javascript_include_tag 'application'
    = javascript_tag '$.fx.off = true;' if Rails.env.test?
    = csrf_meta_tags
    - if Rails.env.production?
      = analytics_init
      = mixpanel_init (request.subdomain.match(/^staging$/) ? :staging : :production)
      = mixpanel_call 'track', 'Viewed teaser page', "{'Teaser version': '#{request.subdomain.match(/^join|staging$/) ? 'templates' : 'feedback'}'}"

  %body
    %header.navbar.navbar-static-top
      %nav.navbar-inner
        .container
          = link_to image_tag('base/logo.png', alt: 'Joblr'), root_path, class: 'brand'
    .container
      .row-fluid#content
        .span12
          = yield
          = render 'notif_modal'
